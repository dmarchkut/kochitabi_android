<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jp.dmarch.kochitabi.HomeActivity">

    <ImageButton
        android:id="@+id/imageSpotButton"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageMapButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.54"
        app:srcCompat="@drawable/home_choose_spot" />

    <ImageButton
        android:id="@+id/imageCameraButton"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/imageMapButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778"
        app:srcCompat="@drawable/home_choose_camera" />

    <ImageButton
        android:id="@+id/imageMapButton"
        android:layout_width="fill_parent"
        android:layout_height="95dp"
        android:layout_marginTop="416dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_choose_map" />

    <ImageView
        android:id="@+id/spotImageView"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/spotNameTextView"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="#7fffffff"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageMapButton"
        app:layout_constraintTop_toTopOf="@+id/spotDetailButton"
        app:layout_constraintVertical_bias="0.378"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/spotDetailButton"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@null"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>



